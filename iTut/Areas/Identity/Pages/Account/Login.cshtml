@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = "_AuthLayout";
}

<div class="d-flex align-items-center min-vh-100 py-5 mr-auto bg-body w-100">
    <div class="container">
        <form id="account" method="post" class="card bg-transparent shadow-none px-lg-5">
            <h1 class="mb-5 fs-4 mt-6">Sign In</h1>
            <div asp-validation-summary="ModelOnly" class="text-danger small"></div>
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group mb-3 mt-3">
                        <label asp-for="Input.Email" class="form-label mb-1"></label>
                        <input class="form-control" asp-for="Input.Email" placeholder="Email Address" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="col-12 mb-2 text-right">
                <a class="link-primary" id="forgot-password" asp-page="./ForgotPassword">Forgot Password?</a>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Input.Password" class="form-label mb-1"></label>
                <input asp-for="Input.Password" class="form-control" placeholder="Password" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <div class="checkbox">
                    <div class="form-check form-switch">
                        <input asp-for="Input.RememberMe" id="remember-me" class="form-check-input" />
                        <label for="remember-me" class="form-check-label">Remember Me?</label>
                    </div>
                </div>
            </div>
            <div class="d-flex justify-content-between my-3">
                <a asp-controller="Home" asp-action="Index" class="btn btn-sm btn-danger" name="cancel">Cancel</a>
                <button class="btn btn-sm btn-primary" name="button" type="submit">Sign In</button>
            </div>
            @*<div class="form-group">
                <p>
                    <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                </p>
                <p>
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                </p>
                <p>
                    <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                </p>
            </div>*@
        </form>
    </div>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
