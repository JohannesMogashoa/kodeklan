 <div class="container-fluid overflow-scroll">
<div class="row m-1 justify-content-around" >
    <div class="card col-md-4">
        <img class="card-img-top w-100" src="~/img/Feedback1.svg" alt="Card image cap">
        <div class="card-body">
            <h5 class="card-title py-2">Feedback</h5>
            <p class="card-text py-2"> See The Subject Coordinator Feedbacks .</p>
            <a asp-controller="Educator" asp-action="Feedbacks" class="btn btn-primary">See Feedback</a>
        </div>
    </div>
    <div class="card col-md-4">
        <img class="card-img-top w-100" src="~/img/undraw_online_stats_0g94.svg" alt="Card image cap">
        <div class="card-body">
            <h5 class="card-title py-5">View Students Mark</h5>
            <p class="card-text pt-0 pb-2"> View students marks </p>
            <a asp-controller="Educator" asp-action="LoadMarks" class="btn btn-primary">Go To Marks</a>
        </div>
    </div>
    <div class="card col-md-4">
        <img class="card-img-top w-100" src="~/img/undraw_world_re_768g.svg" alt="Card image cap">
        <div class="card-body">
            <h5 class="card-title py-2">Add Marks</h5>
            <p class="card-text py-3"> Add Students Marks .</p>
            <a asp-controller="Educator"  asp-action="StudentMarks" class="btn btn-primary">Add Marks</a>
        </div>
    </div>
</div> 
<div class="row m-1 " >

    <div class="card col-md-4">
        <img class="card-img-top w-100" src="~/img/undraw_add_files_re_v09g.svg" alt="Card image cap">
        <div class="card-body">
            <h5 class="card-title py-2">Add Category</h5>
            <p class="card-text py-2"> Add a Category or Topic here Below .</p>
            <a href="/Educator/CreateCategory" class="btn btn-primary"> Add Category</a>
        </div>
    </div>
     <div class="card col-md-4">
        <img class="card-img-top w-100" src="~/img/upload.svg" alt="Card image cap">
        <div class="card-body">
            <h5 class="card-title py-2">Upload Documents</h5>
            <p class="card-text py-2"> Upload study material and docunents here (eg. pdf,docx) .</p>
            <a href="/Educator/UploadFile" class="btn btn-primary"> Upload Document</a>
        </div>
    </div>

    </div>
     </div>
</div>

