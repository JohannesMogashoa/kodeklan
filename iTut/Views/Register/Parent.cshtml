@model RegisterParentViewModel
@{
    ViewData["Title"] = "Register Parent";
}

<div>
    <form asp-controller="Register" asp-action="Parent" method="post" class="container">
        <div asp-validation-summary="ModelOnly" class="text-danger list-unstyled mb-2"></div>
        <h4>Register As A Parent</h4>
        <hr />
        <div class="form-group">
            <label class="form-label mb-1" for="firstName">First Name</label>
            <input class="form-control" asp-for="FirstName" asp-required="true" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label class="form-label mb-1" for="lastName">Last Name</label>
            <input class="form-control" asp-for="LastName" asp-required="true" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label class="form-label mb-1" for="email">Phone Number</label>
            <input class="form-control" asp-for="PhoneNumber" asp-required="true" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label class="form-label mb-1" for="email">Physical Address</label>
            <input class="form-control" asp-for="PhysicalAddress" asp-required="true" />
            <span asp-validation-for="PhysicalAddress" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Gender" class="form-label mb-1">Gender <span class="text-danger">*</span></label>
            <select asp-for="Gender" asp-items="Html.GetEnumSelectList<Gender>()" class="form-control"></select>
        </div>
        <div class="form-group">
            <label asp-for="Race" class="form-label mb-1">Gender <span class="text-danger">*</span></label>
            <select asp-for="Race" asp-items="Html.GetEnumSelectList<Race>()" class="form-control"></select>
        </div>
        <div class="form-group">
            <label class="form-label mb-1" asp-for="EmailAddress"></label>
            <input asp-for="EmailAddress" class="form-control" />
            <span asp-validation-for="EmailAddress" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label class="form-label mb-1" asp-for="Password"></label>
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label class="form-label mb-1" asp-for="ConfirmPassword"></label>
            <input asp-for="ConfirmPassword" class="form-control" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Register</button>
    </form>
</div>
