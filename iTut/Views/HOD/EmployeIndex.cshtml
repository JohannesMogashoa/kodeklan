@model IEnumerable<iTut.Models.HOD.Employee>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div id="collapseOffCanvas" class="bg-body offcanvas-collapse open w-100">
    <main class="main-expanded vh-100 w-100">
        <div class="container-fluid px-lg-5">
            <div class="d-flex py-5 border-bottom">
                <div class="mr-auto">
                    <h2 class="mb-2 fs-1 lh-tight"></h2>
                    <p class="lh-tight">Employee Management</p>
                </div>
                <ul class="list-unstyled d-flex align-items-center">
                    <li class="d-lg-none mr-sm-5">
                        <button class="btn link-body p-0 offcanvas-button" type="button">
                            <svg class="gi gi-arrow-circle-left fs-4" width="1em" height="1em" viewBox="0 0 24 24" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                <path d="M12 2c5.523 0 10 4.477 10 10s-4.477 10-10 10S2 17.523 2 12 6.477 2 12 2zm-.293 6.293a1 1 0 0 0-1.414 0h0l-3 3-.083.094a1 1 0 0 0 .083 1.32h0l3 3 .094.083a1 1 0 0 0 1.32-.083h0l.083-.094a1 1 0 0 0-.083-1.32h0L10.416 13H16l.117-.007A1 1 0 0 0 16 11h0-5.586l1.293-1.293.083-.094a1 1 0 0 0-.083-1.32z"></path>
                            </svg>
                        </button>
                    </li>
                </ul>
            </div>
            <div class="invisible-scrollbar position-relative wh-main">
                <div class="row mt-3">
                    <div class="col-12">
                        <div class="d-flex align-items-center mb-3">
                            <hr />
                            <div class="mr-auto">
                                <h2 class="mb-2 fs-2 lh-tight">List Of </h2>
                                <p>Employment Educations</p>
                            </div>
                            <hr />
                        </div>
                    </div>

                                <div class="page-header">
                                    <h1>
                                        Employees list
                                        <small>
                                            <i class="ace-icon fa fa-angle-double-right"></i>
                                            @Html.ActionLink("Create New", "Create")
                                        </small>
                                    </h1>
                                </div>
                                <div class="row">
                                    <div class="col-xs-12">
                                        <table id="simple-table" class="table  table-bordered table-hover">
                                            <thead>
                                                <tr>
                                                    <th class="detail-col">Details</th>
                                                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                                                    <th>@Html.DisplayNameFor(model => model.FatherName)</th>
                                                    <th class="hidden-480">
                                                        @Html.DisplayNameFor(model => model.DOB)
                                                    </th>
                                                    <th>
                                                        <i class="ace-icon fa fa-clock-o bigger-110 hidden-480"></i>
                                                        @Html.DisplayNameFor(model => model.Email)
                                                    </th>
                                                    <th class="hidden-480">
                                                        @Html.DisplayNameFor(model => model.PresentAddress)
                                                    </th>
                                                    <th></th>
                                                </tr>
                                            </thead>
                                            @foreach (var item in Model)
                                            {
                                                <tbody>
                                                    <tr>

                                                        <td class="center">
                                                            <div class="action-buttons">
                                                                <a href="#" class="green bigger-140 show-details-btn" title="Show Details">
                                                                    <i class="ace-icon fa fa-angle-double-down"></i>
                                                                    <span class="sr-only">Details</span>
                                                                </a>
                                                            </div>
                                                        </td>

                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.Name)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.FatherName)
                                                        </td>
                                                        <td class="hidden-480">
                                                            @Html.DisplayFor(modelItem => item.MotherName)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.DOB)
                                                        </td>

                                                        <td class="hidden-480">
                                                            @Html.DisplayFor(modelItem => item.Email)
                                                        </td>

                                                        <td>
                                                            <div class="hidden-sm hidden-xs btn-group">
                                                                <button class="btn btn-xs btn-success">
                                                                    <i class="ace-icon fa fa-check bigger-120"></i>
                                                                    @Html.ActionLink("Details", "Details", new { id = item.Id })
                                                                </button>

                                                                <button class="btn btn-xs btn-info">
                                                                    <i class="ace-icon fa fa-pencil bigger-120"></i>
                                                                    @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                                                                </button>

                                                                <button class="btn btn-xs btn-danger">
                                                                    <i class="ace-icon fa fa-trash-o bigger-120"></i>
                                                                    @*@Html.ActionLink("Delete", "Delete", new { id = item.Id })*@
                                                                </button>

                                                                <button class="btn btn-xs btn-warning">
                                                                    <i class="ace-icon fa fa-flag bigger-120"></i>
                                                                </button>
                                                            </div>

                                                        </td>
                                                    </tr>
                                                   
                                                    <tr class="detail-row">
                                                        <td colspan="8">
                                                            <div class="table-detail">
                                                                <div class="row">
                                                                    <div class="col-xs-12 col-sm-2">
                                                                        <div class="text-center">
                                            
                                                                            <br />
                                                                            <div class="width-80 label label-info label-xlg arrowed-in arrowed-in-right">
                                                                                <div class="inline position-relative">
                                                                                    <a class="user-title-label" href="#">
                                                                                        <i class="ace-icon fa fa-circle light-green"></i>
                                                                                        &nbsp;
                                                                                        <span class="white">@Html.DisplayFor(modelItem => item.Name)</span>
                                                                                    </a>
                                                                                </div>
                                                                            </div>
                                                                        </div>
                                                                    </div>

                                                                    <div class="col-xs-12 col-sm-7">
                                                                        <div class="space visible-xs"></div>

                                                                        <div class="profile-user-info profile-user-info-striped">
                                                                            <hr/>
                                                                            <div class="profile-info-row">
                                                                                <div class="profile-info-name"> Username </div>

                                                                                <div class="profile-info-value">
                                                                                    <span>@Html.DisplayFor(modelItem => item.UserName)</span>
                                                                                </div>
                                                                            </div>

                                                                            <div class="profile-info-row">
                                                                                <div class="profile-info-name">@Html.DisplayNameFor(model => model.PresentAddress) </div>

                                                                                <div class="profile-info-value">
                                                                                    <i class="fa fa-map-marker light-orange bigger-110"></i>
                                                                                    <span>@Html.DisplayFor(modelItem => item.PresentAddress)</span>
                                                                                </div>
                                                                            </div>
                                                                            <hr/>
                                                                            <div class="profile-info-row">
                                                                                <div class="profile-info-name">@Html.DisplayNameFor(model => model.PermanentAddress) </div>

                                                                                <div class="profile-info-value">
                                                                                    <i class="fa fa-map-marker light-orange bigger-110"></i>
                                                                                    <span>@Html.DisplayFor(modelItem => item.PermanentAddress)</span>
                                                                                </div>
                                                                            </div>
                                                                            <hr />
                                                                            <div class="profile-info-row">
                                                                                <div class="profile-info-name"> Age </div>

                                                                                <div class="profile-info-value">
                                                                                    <span>38</span>
                                                                                </div>
                                                                            </div>
                                                                            <hr/>
                                                                            <div class="profile-info-row">
                                                                                <div class="profile-info-name"> Joined </div>

                                                                                <div class="profile-info-value">
                                                                                    <span>2010/06/20</span>
                                                                                </div>
                                                                            </div>
                                                                            <hr/>
                                                                            <div class="profile-info-row">
                                                                                <div class="profile-info-name"> Last Online </div>

                                                                                <div class="profile-info-value">
                                                                                    <span>3 hours ago</span>
                                                                                </div>
                                                                            </div>
                                                                            <hr />
                                                                            <div class="profile-info-row">
                                                                                <div class="profile-info-name"> About Me </div>

                                                                                <div class="profile-info-value">
                                                                                    <span>Bio</span>
                                                                                </div>
                                                                            </div>
                                                                            <hr />
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </td>
                                                    </tr>
                                                </tbody>
                                            }
                                        </table>
                                    </div><!-- /.span -->
                                </div>
                    <hr />
                </div>
                <hr />
                <div>
                    <button type="button" onclick="onClicked()"> Generate PDF Report</button>
                </div>
                <hr />
                <div class="mr-auto">

                    <img src="~/img/HOD/Back.png" alt="Sample Photo" hight="120px" width="100" />
                    <p><a asp-controller="HOD" asp-action="Index">Back To DashBoard</a></p>
                </div>
                <hr />
            </div>
        </div>
    </main>
</div>
   



