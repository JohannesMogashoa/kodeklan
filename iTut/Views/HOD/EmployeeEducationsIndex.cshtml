@model IEnumerable<iTut.Models.HOD.EmployeeEducation>

@{
    ViewData["Title"] = "Index";
}
<div id="collapseOffCanvas" class="bg-body offcanvas-collapse open w-100">
    <main class="main-expanded vh-100 w-100">
        <div class="container-fluid px-lg-5">
            <div class="d-flex py-5 border-bottom">
                <div class="mr-auto">
                    <h2 class="mb-2 fs-1 lh-tight"></h2>
                    <p class="lh-tight">Employee Management</p>
                </div>
                <ul class="list-unstyled d-flex align-items-center">
                    <li class="d-lg-none mr-sm-5">
                        <button class="btn link-body p-0 offcanvas-button" type="button">
                            <svg class="gi gi-arrow-circle-left fs-4" width="1em" height="1em" viewBox="0 0 24 24" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                <path d="M12 2c5.523 0 10 4.477 10 10s-4.477 10-10 10S2 17.523 2 12 6.477 2 12 2zm-.293 6.293a1 1 0 0 0-1.414 0h0l-3 3-.083.094a1 1 0 0 0 .083 1.32h0l3 3 .094.083a1 1 0 0 0 1.32-.083h0l.083-.094a1 1 0 0 0-.083-1.32h0L10.416 13H16l.117-.007A1 1 0 0 0 16 11h0-5.586l1.293-1.293.083-.094a1 1 0 0 0-.083-1.32z"></path>
                            </svg>
                        </button>
                    </li>
                </ul>
            </div>
            <div class="invisible-scrollbar position-relative wh-main">
                <div class="row mt-3">
                    <div class="col-12">
                        <div class="d-flex align-items-center mb-3">
                            <hr />
                            <div class="mr-auto">
                                <h2 class="mb-2 fs-2 lh-tight">List Of </h2>
                                <p>Employment Educations</p>
                            </div>
                            <hr />
                        </div>
                    </div>

                    <p>
                        <a asp-controller="HOD" asp-action="EmployeeEducationsCreate">Create New</a>
                    </p>
                    <table class="table" border="1" width="500">
                        <thead bgcolor="cyan">
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.EducationLevel)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ExamTitle)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Major)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.InstituteName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ResultType)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.CGPA)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Scale)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Marks)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.PassingYear)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Duration)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Achievement)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Employee)
                                </th>
                                <th>Controls</th>
                            </tr>
                        </thead>
                        <tbody align="center">
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.EducationLevel.EducationLevelNaame)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ExamTitle.TitleName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Major)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.InstituteName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ResultType)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CGPA)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Scale)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Marks)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PassingYear)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Duration)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Achievement)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Employee.Email)
                                    </td>
                                    <td>
                                        <a asp-controller="HOD" asp-action="EmployeeEducationsEdit" asp-route-id="@item.Id">Edit</a> |
                                        <a asp-controller="HOD" asp-action="EmployeeEducationsDetails" asp-route-id="@item.Id">Details</a> |
                                        <a asp-controller="HOD" asp-action="EmployeeEducationsDelete" asp-route-id="@item.Id">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <hr />
                    <div class="mr-auto">

                        <img src="~/img/HOD/Back.png" alt="Sample Photo" hight="120px" width="100px" />
                        <p><a asp-controller="HOD" asp-action="EmployeesIndex">Back To Employee</a></p>
                    </div>
                    <hr />
                </div>
            </div>
        </div>
    </main>
</div>
<h1>Index</h1>

