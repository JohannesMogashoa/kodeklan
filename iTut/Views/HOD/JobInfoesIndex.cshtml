@model IEnumerable<iTut.Models.HOD.JobInfo>

@{
    ViewData["Title"] = "Index";
}
<div id="collapseOffCanvas" class="bg-body offcanvas-collapse open w-100">
    <main class="main-expanded vh-100 w-100">
        <div class="container-fluid px-lg-5">
            <div class="d-flex py-5 border-bottom">
                <div class="mr-auto">
                    <h2 class="mb-2 fs-1 lh-tight"> </h2>
                    <p class="lh-tight">Staff Management</p>
                </div>
                <ul class="list-unstyled d-flex align-items-center">
                    <li class="d-lg-none mr-sm-5">
                        <button class="btn link-body p-0 offcanvas-button" type="button">
                            <svg class="gi gi-arrow-circle-left fs-4" width="1em" height="1em" viewBox="0 0 24 24" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                <path d="M12 2c5.523 0 10 4.477 10 10s-4.477 10-10 10S2 17.523 2 12 6.477 2 12 2zm-.293 6.293a1 1 0 0 0-1.414 0h0l-3 3-.083.094a1 1 0 0 0 .083 1.32h0l3 3 .094.083a1 1 0 0 0 1.32-.083h0l.083-.094a1 1 0 0 0-.083-1.32h0L10.416 13H16l.117-.007A1 1 0 0 0 16 11h0-5.586l1.293-1.293.083-.094a1 1 0 0 0-.083-1.32z"></path>
                            </svg>
                        </button>
                    </li>
                </ul>
            </div>
            <div class="invisible-scrollbar position-relative wh-main">
                <div class="row mt-3">
                    <div class="col-12">
                        <div class="d-flex align-items-center mb-3">
                            <div class="mr-auto">
                                <h2 class="mb-2 fs-2 lh-tight">Job List</h2>
                                <p>Job Infors</p>
                            </div>
                            
                        </div>
                        <hr />
                        <p>
                            <a asp-controller="HOD" asp-action="JobInfoesCreate">Create New</a>
                        </p>
                        <hr />
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Designation)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.DOJ)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Salary)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.TotalLeave)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Appointment)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.AppointmentExt)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Employee)
                                    </th>
                                    <th>[Controls]</th>
                                </tr>
                            </thead>
                            <tbody>
                        @foreach (var item in Model) {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Designation.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DOJ)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Salary)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TotalLeave)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Appointment)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.AppointmentExt)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Employee.Email)
                                    </td>
                                    <td>
                                            <a asp-controller="HOD" asp-action="JobInfoesEdit" asp-route-id="@item.Id">Edit</a> |
                                            <a asp-controller="HOD" asp-action="JobInfoesDetails" asp-route-id="@item.Id">Details</a> |
                                            <a asp-controller="HOD" asp-action="JobInfoesDelete" asp-route-id="@item.Id">Delete</a>
                                    </td>
                                </tr>
                        }
                            </tbody>
                        </table>
                    </div>
                    <hr />
                    <div class="mr-auto">

                        <img src="~/img/HOD/Back.png" alt="Sample Photo" hight="120px" width="100px" />
                        <p><a asp-controller="HOD" asp-action="EmployeesIndex">Back To Class Fees</a></p>
                    </div>
                    <hr />
                </div>
            </div>
        </div>
    </main>
</div>


