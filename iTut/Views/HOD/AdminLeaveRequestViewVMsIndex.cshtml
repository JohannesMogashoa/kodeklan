@model iTut.Models.HOD.Leave.AdminLeaveRequestViewVM

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="collapseOffCanvas" class="bg-body offcanvas-collapse open w-100">
    <main class="main-expanded vh-100 w-100">
        <div class="container-fluid px-lg-5">
            <div class="d-flex py-5 border-bottom">
                <div class="mr-auto">
                    <h2 class="mb-2 fs-1 lh-tight"> </h2>
                    <p class="lh-tight">Staff Managemnet</p>
                </div>
                <ul class="list-unstyled d-flex align-items-center">
                    <li class="d-lg-none mr-sm-5">
                        <button class="btn link-body p-0 offcanvas-button" type="button">
                            <svg class="gi gi-arrow-circle-left fs-4" width="1em" height="1em" viewBox="0 0 24 24" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                <path d="M12 2c5.523 0 10 4.477 10 10s-4.477 10-10 10S2 17.523 2 12 6.477 2 12 2zm-.293 6.293a1 1 0 0 0-1.414 0h0l-3 3-.083.094a1 1 0 0 0 .083 1.32h0l3 3 .094.083a1 1 0 0 0 1.32-.083h0l.083-.094a1 1 0 0 0-.083-1.32h0L10.416 13H16l.117-.007A1 1 0 0 0 16 11h0-5.586l1.293-1.293.083-.094a1 1 0 0 0-.083-1.32z"></path>
                            </svg>
                        </button>
                    </li>
                </ul>
            </div>
            <div class="invisible-scrollbar position-relative wh-main">
                <div class="row mt-3">
                    <div class="col-12">
                        <div class="d-flex align-items-center mb-3">
                            <hr />
                            <div class="mr-auto">

                                <img src="~/img/HOD/leavereq.png" alt="Sample Photo" hight="120px" width="100px" />
                                <p><a asp-controller="HOD" asp-action="LeaveRequestVMsindex">Leave Request Management</a></p>
                            </div>
                            <div class="mr-auto">

                                <img src="~/img/HOD/leavere.png" alt="Sample Photo" hight="100px" width="100px" />
                                <p><a asp-controller="HOD" asp-action="LeaveAllocationVMsIndex">Leave Allocation Management</a></p>
                            </div>
                            <div class="mr-auto">

                                <img src="~/img/HOD/leavetype.png" alt="Sample Photo" hight="110px" width="100px" />
                                <p><a asp-controller="HOD" asp-action="LeaveTypeVMsIndex">Leave Type Management</a></p>
                            </div>
                            <hr />
                            
                        </div>
                        <div class="mr-auto">
                            
                        </div>
                        <hr />
                                    
                                    
                        <div class="row">
                            <div class="col-md-3">
                                <div class="info-box">
                                    <span class="info-box-icon bg-info"><i class="fas fa-tachometer-alt"></i></span>

                                    <div class="info-box-content">
                                        <span class="info-box-text">@Model.TotalRequests</span>
                                        <span class="info-box-number">@Html.DisplayNameFor(model => model.TotalRequests)</span>
                                    </div>
                                    <!-- /.info-box-content -->
                                </div>

                            </div>
                            <div class="col-md-3">
                                <div class="info-box">
                                    <span class="info-box-icon bg-warning"><i class="fas fa-exclamation-circle"></i></span>

                                    <div class="info-box-content">
                                        <span class="info-box-text">@Model.PendingRequests</span>
                                        <span class="info-box-number">@Html.DisplayNameFor(model => model.PendingRequests)</span>
                                    </div>
                                    <!-- /.info-box-content -->
                                </div>

                            </div>
                            <div class="col-md-3">
                                <div class="info-box">
                                    <span class="info-box-icon bg-success"><i class="far fa-check-circle"></i></span>

                                    <div class="info-box-content">
                                        <span class="info-box-text">@Model.ApprovedRequests</span>
                                        <span class="info-box-number">@Html.DisplayNameFor(model => model.ApprovedRequests)</span>
                                    </div>
                                    <!-- /.info-box-content -->
                                </div>

                            </div>
                            <div class="col-md-3">
                                <div class="info-box">
                                    <span class="info-box-icon bg-danger"><i class="far fa-times-circle"></i></span>

                                    <div class="info-box-content">
                                        <span class="info-box-text">@Model.RejectedRequests</span>
                                        <span class="info-box-number">@Html.DisplayNameFor(model => model.RejectedRequests)</span>
                                    </div>
                                    <!-- /.info-box-content -->
                                </div>

                            </div>
                        </div>

                        
                    </div>

                    <br />
                    <br />

                    <hr />
                    <h1>Leave Request Log</h1>
                    <hr />
                    <table id="tblData" class="table">
                        <thead>
                            <tr>
                                <th>
                                    Employee Name and UserName
                                </th>
                                <th>
                                    Start Date
                                </th>
                                <th>
                                    End Date
                                </th>
                                <th>
                                    Leave Type
                                </th>
                                <th>
                                    Date Requested
                                </th>

                                <th>
                                    Approval Status
                                </th>

                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.LeaveRequests)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.RequestingEmployee.Name) @Html.DisplayFor(modelItem => item.RequestingEmployee.UserName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.StartDate)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.EndDate)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.LeaveType.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DateRequested)
                                    </td>
                                    <td>
                                        @if (item.Cancelled)
                                        {
                                            <span class="badge badge-secondary">Cancelled</span>
                                        }
                                        else if (item.Approved == true)
                                        {
                                            <span class="badge badge-success">Approved</span>
                                        }
                                        else if (item.Approved == false)
                                        {
                                            <span class="badge badge-danger">Rejected</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-warning">Pending Approval</span>
                                        }
                                    </td>
                                    <td>
                                        @if (!item.Cancelled)
                                        {
                                            <a class="btn btn-outline-primary" asp-action="Details" asp-route-id="@item.Id">
                                                <i class="fa fa-file"></i>Review
                                            </a>
                                        }


                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                    <hr />
                    <div class="mr-auto">

                        <img src="~/img/HOD/Back.png" alt="Sample Photo" hight="120px" width="100px" />
                        <p><a asp-controller="HOD" asp-action="Index">Back To DashBoard</a></p>
                    </div>
                    <hr />
                    
                </div>
            </div>
        </div>
    </main>
</div>