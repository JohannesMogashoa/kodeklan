@model IEnumerable<iTut.Models.HOD.ClassFee>

@{
    ViewData["Title"] = "Index";
}

<div id="collapseOffCanvas" class="bg-body offcanvas-collapse open w-100">
    <main class="main-expanded vh-100 w-100">
        <div class="container-fluid px-lg-5">
            <div class="d-flex py-5 border-bottom">
                <div class="mr-auto">
                    <h2 class="mb-2 fs-1 lh-tight"> </h2>
                    <p class="lh-tight">Class Fee Management</p>
                </div>
                <ul class="list-unstyled d-flex align-items-center">
                    <li class="d-lg-none mr-sm-5">
                        <button class="btn link-body p-0 offcanvas-button" type="button">
                            <svg class="gi gi-arrow-circle-left fs-4" width="1em" height="1em" viewBox="0 0 24 24" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                <path d="M12 2c5.523 0 10 4.477 10 10s-4.477 10-10 10S2 17.523 2 12 6.477 2 12 2zm-.293 6.293a1 1 0 0 0-1.414 0h0l-3 3-.083.094a1 1 0 0 0 .083 1.32h0l3 3 .094.083a1 1 0 0 0 1.32-.083h0l.083-.094a1 1 0 0 0-.083-1.32h0L10.416 13H16l.117-.007A1 1 0 0 0 16 11h0-5.586l1.293-1.293.083-.094a1 1 0 0 0-.083-1.32z"></path>
                            </svg>
                        </button>
                    </li>
                </ul>
            </div>
            <div class="invisible-scrollbar position-relative wh-main">
                <div class="row mt-3">
                    <div class="col-12">
                        <hr />
                        <div class="d-flex align-items-center mb-3">
                            <div class="mr-auto">

                                <img src="~/img/HOD/ClassNamez.png" alt="Sample Photo" hight="110px" width="100" />
                                <p><a asp-controller="HOD" asp-action="ClassNamesIndex">Classes Management</a></p>
                            </div>
                            
                        </div>
                        <hr />
                        <div class="mr-auto">
                            <h2 class="mb-2 fs-2 lh-tight">Class Fee</h2>
                            <p>List</p>
                        </div>
                        <hr />
                        <p>
                            <a asp-controller="HOD" asp-action="ClassFeesCreate">Create New</a>
                        </p>
                        <hr/>
                        <table  class="table table-striped table-dark table-hover">
                            <thead >
                           
                                <tr>
                                    
                                    <th>
                                        @Html.DisplayNameFor(model => model.AdmissionFee)
                                    </th>
                                    
                                    <th>
                                        @Html.DisplayNameFor(model => model.ClassName)
                                    </th>
                                    
                                    <th>Controls</th>
                                </tr>
                            </thead>
                            <tbody align="center">
                                
                        @foreach (var item in Model) {
                                <tr>
                                    
                                    <td>
                                       @Html.DisplayFor(modelItem => item.AdmissionFee) 
                                    </td>
                                    
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ClassName.Name)
                                    </td>
                                    
                                    <td>
                                            |<a asp-controller="HOD" asp-action="ClassFeesEdit" asp-route-id="@item.Id">Edit</a> |
                                            <a asp-controller="HOD" asp-action="ClassFeesDetails" asp-route-id="@item.Id">Details</a> |
                                            <a asp-controller="HOD" asp-action="ClassFeesDelete" asp-route-id="@item.Id">Delete</a> |
                                    </td>
                                    
                                </tr>
                        }
                            </tbody>
                        </table>
                        <hr />
                    </div>
                    <hr />
                    <div>
                        <button type="button" onclick="onClicked()"> Generate PDF Report</button>
                    </div>
                    <hr />
                    <div class="mr-auto">

                        <img src="~/img/HOD/Back.png" alt="Sample Photo" hight="120px" width="100" />
                        <p><a asp-controller="HOD" asp-action="Index">Back To DashBoard</a></p>
                    </div>
                    <hr />
                </div>
            </div>
        </div>
    </main>
</div>


