@model HODIndexViewModel
@{
    ViewData["Title"] = "Work Board";
}

<div id="collapseOffCanvas" class="bg-body offcanvas-collapse open w-100">
    <main class="main-expanded vh-100 w-100">
        <div class="container-fluid px-lg-5">
            <div class="d-flex py-5 border-bottom">
                <span class="d-inline-flex flex-shrink-0 align-items-center justify-content-center mr-3 text-white text-uppercase bg-primary rounded-circle  wh-2-5rem">@Model.HodUser.FirstName.ToCharArray()[0]</span>
                <div class="mr-auto">
                    <h2 class="mb-2 fs-1 lh-tight">Hi, @Model.HodUser.FirstName</h2>
                    <p class="lh-tight">Dashboard</p>
                </div>
                <ul class="list-unstyled d-flex align-items-center">
                    <li class="d-lg-none mr-sm-5">
                        <button class="btn link-body p-0 offcanvas-button" type="button">
                            <svg class="gi gi-arrow-circle-left fs-4" width="1em" height="1em" viewBox="0 0 24 24" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                <path d="M12 2c5.523 0 10 4.477 10 10s-4.477 10-10 10S2 17.523 2 12 6.477 2 12 2zm-.293 6.293a1 1 0 0 0-1.414 0h0l-3 3-.083.094a1 1 0 0 0 .083 1.32h0l3 3 .094.083a1 1 0 0 0 1.32-.083h0l.083-.094a1 1 0 0 0-.083-1.32h0L10.416 13H16l.117-.007A1 1 0 0 0 16 11h0-5.586l1.293-1.293.083-.094a1 1 0 0 0-.083-1.32z"></path>
                            </svg>
                        </button>
                    </li>
                </ul>
            </div>
            <div class="invisible-scrollbar position-relative wh-main">
                <div class="row mt-3">
                    <div class="col-12">
                        <div class="mr-auto">
                            <img src="~/img/HOD/welcome.png" alt="Sample Photo" hight="300px" width="1200px" />
                        </div>
                        <hr />
                        <div class="d-flex align-items-center mb-3">
                            <hr />
                            <div class="col-md-3" align="Center">
                                <div class="card grow-sm mb-4 animated fadeInDown">
                                    <div class="card-body" align="Center">
                                        <img src="~/img/HOD/school.png" alt="Sample Photo" hight="120px" width="100px" />
                                        <p><a asp-controller="HOD" asp-action="AboutEnrollment">About Enrollment</a></p>
                                    </div>
                                </div>
                            </div>
                            <div>
                                <p>|</p>
                            </div>
                            <div class="col-md-3" align="Center">
                                <div class="card grow-sm mb-4 animated fadeInDown">
                                    <div class="card-body" align="Center">
                                        <img src="~/img/HOD/employees.png" alt="Sample Photo" hight="100px" width="100px" />
                                        <p><a asp-controller="HOD" asp-action="InstructorsIndex">Coordinators</a></p>
                                    </div>
                                </div>
                            </div>
                            <div>
                                <p>|</p>
                            </div>
                            <div class="col-md-3" align="Center">
                                <div class="card grow-sm mb-4 animated fadeInDown">
                                    <div class="card-body" align="Center">
                                        <img src="~/img/HOD/Admission.png" alt="Sample Photo" hight="110px" width="100px" />
                                        <p><a asp-controller="HOD" asp-action="DepartmentsIndex">Departments</a></p>
                                    </div>
                                </div>
                            </div>
                            <div>
                                <p>|</p>
                            </div>
                            <div class="col-md-3" align="Center">
                                <div class="card grow-sm mb-4 animated fadeInDown">
                                    <div class="card-body" align="Center">
                                        <img src="~/img/HOD/jobinfors.png" alt="Sample Photo" hight="110px" width="100" />
                                        <p><a asp-controller="HOD" asp-action="SubjectsIndex">SubjectS</a></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row text-center">
                            <div class="col-md-3" align="Center">
                                <div class="card grow-sm mb-4 animated fadeInDown">
                                    <div class="card-body" align="Center">
                                        TOTAL Coordinator: @Model.CountCoordinator
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3" align="Center">
                                <div class="card grow-sm mb-4 mt-5 animated fadeInUp">
                                    <div class="card-body" align="Center">
                                        TOTAL SUBJECT: @Model.CountSubject
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3" align="Center">
                                <div class="card grow-sm mb-4 animated fadeInDown">
                                    <div class="card-body" align="Center">
                                        TOTAL EDUCATOR: @Model.CountEducator
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3" align="Center">
                                <div class="card grow-sm mb-4 mt-5 animated fadeInUp" align="Center">
                                    <div class="card-body">
                                        TOTAL STUDENTS: @Model.CountStudent
                                    </div>

                                </div>
                            </div>
                        </div>
                        <hr />
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>