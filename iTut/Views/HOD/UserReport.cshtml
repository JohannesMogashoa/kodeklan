@model iTut.Models.ViewModels.HOD.HODUserReports
@{
    ViewBag.Title = "User Report";
}

<div class="bg-body offcanvas-collapse open w-100" id="user-report">
    <main class="main-expanded vh-100 w-100">
        <div class="container-fluid px-lg-5">
            <div class="d-flex py-5 align-items-center border-bottom d-print-none">
                <span class="d-inline-flex flex-shrink-0 align-items-center justify-content-center mr-3 text-white text-uppercase bg-primary rounded-circle  wh-2-5rem">@Model.HODUser.FirstName.ToCharArray()[0]</span>
                <div class="mr-auto">
                    <h2 class="fs-1 lh-tight">Hi, @Model.HODUser.FirstName  @Model.HODUser.LastName </h2>
                </div>
                <div>
                    <button data-toggle="tooltop" title="Print" onclick="window.print()" class="btn btn-auto d-inline-flex flex-shrink-0 align-items-center justify-content-center p-0 rounded-circle wh-2-5rem">
                        <svg class="gi gi-printer fs-3" width="1em" height="1em" viewBox="0 0 24 24" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                            <path d="M16 3a2 2 0 0 1 2 2v2h1a3 3 0 0 1 3 3v6a3 3 0 0 1-3 3h-1a2 2 0 0 1-2 2H8a2 2 0 0 1-2-2H5a3 3 0 0 1-3-3v-6a3 3 0 0 1 3-3h1V5a2 2 0 0 1 2-2h8zm0 12H8v4h8v-4zm0-10H8v2h8V5z" />
                        </svg>
                    </button>
                    <button data-toggle="tooltop" title="Email" class="btn btn-auto d-inline-flex flex-shrink-0 align-items-center justify-content-center p-0 rounded-circle wh-2-5rem">
                        <svg class="gi gi-envelope fs-3" width="1em" height="1em" viewBox="0 0 24 24" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                            <path d="M19 4a3 3 0 0 1 3 3v10a3 3 0 0 1-3 3H5a3 3 0 0 1-3-3V7a3 3 0 0 1 3-3h14zm-1 2H6c-.99 0-1.378 1.283-.555 1.832l6 4a1 1 0 0 0 1.109 0l6-4C19.378 7.283 18.99 6 18 6z" />
                        </svg>
                    </button>
                </div>
            </div>
            <div class="invisible-scrollbar position-relative wh-main">
                <div class="row mt-3">
                    <div class="col-12">
                        <h2 class="mb-2 fs-2 lh-tight">Main Information</h2>
                        <table class="table table-striped table-bordered w-100">
                            <tr>
                                <td class="w-25"><b>Name</b></td>
                                <td>@Model.HODUser.FirstName</td>
                            </tr>
                            <tr>
                                <td class="w-25"><b>Surname</b></td>
                                <td>@Model.HODUser.LastName</td>
                            </tr>
                            <tr>
                                <td class="w-25"><b>Email Address</b></td>
                                <td>@Model.HODUser.EmailAddress</td>
                            </tr>
                            <tr>
                                <td class="w-25"><b>Phone Number</b></td>
                                <td>@Model.HODUser.PhoneNumber</td>
                            </tr>
                            <tr>
                                <td class="w-25"><b>Gender</b></td>
                                <td>@Model.HODUser.Gender</td>
                            </tr>
                            <tr>
                                <td class="w-25"><b>Race</b></td>
                                <td>@Model.HODUser.Race</td>
                            </tr>
                        </table>
                        <p>
                            You joined the iTut platform on <b>@Model.HODUser.CreatedOn.Date.ToShortDateString()</b> at <b>@Model.HODUser.CreatedOn.ToShortTimeString().</b>
                            Please be aware that on the system we have your Physical Address as the following: <b><em>@Model.HODUser.PhysicalAddress</em></b>.
                        </p>
                        <button onclick="window.print()"> Print To PDF current Record</button>
                    </div>
                    <hr role="presentation" />
                   
                    <hr role="presentation" />
                    <div class="mb-3 col-12">
                        <h2 class="mb-2 fs-2 lh-tight">Created Departments</h2>
                        @if (Model.Departments.Count < 1)
                        {
                            <p>Unfortunately, no department name has been created yet.</p>
                        }
                        else
                        {
                            <table class="table w-100">
                                @foreach (var department in Model.Departments)
                                {
                                    <tr class="mt-3">
                                        <td class="w-25"><b>Name</b></td>
                                        <td>@department.Name</td>
                                    </tr>
                                    <tr>
                                        <td class="w-25"><b>Total</b></td>
                                        <td>@department.Courses.Count</td>
                                    </tr>
                                    <tr>
                                        <td class="w-25"><b>StartDate</b></td>
                                        <td>@department.StartDate</td>
                                    </tr>
                                    <tr>
                                        <td class="w-25"><b>Status</b></td>
                                        <td>@department.InstructorID</td>
                                    </tr>
                                    
                                }
                            </table>
                        }
                        <button onclick="window.print()"> Print To PDF current Record</button>
                    </div>
                    <hr role="presentation" />
                    <div class="mb-3 col-12">
                        <h2 class="mb-2 fs-2 lh-tight">Students Registered </h2>

                        @if (Model.StudentsUser.Count < 1)
                        {
                            <p>Unfortunately, no student registered here .</p>
                        }
                        else
                        {
                            <table class="w-100">
                                @foreach (var students in Model.StudentsUser)
                                {
                                    <tr>
                                        <td class="w-25"><b>Name</b></td>
                                        <td>@students.FirstName</td>
                                    </tr>
                                    <tr>
                                        <td class="w-25"><b>Last Name</b></td>
                                        <td>@students.LastName</td>
                                    </tr>
                                    <tr>
                                        <td class="w-25"><b>Joined On</b></td>
                                        <td>@students.CreatedOn</td>
                                    </tr>
                                    <tr>
                                        <td class="w-25"><b>Email Address</b></td>
                                        <td>@students.EmailAddress</td>
                                    </tr>
                                    <tr>
                                        <td class="w-25"><b>Gender</b></td>
                                        <td>@students.Gender</td>
                                    </tr>
                                    <tr>
                                        <td class="w-25"><b>Number Phone</b></td>
                                        <td>@students.PhoneNumber</td>
                                    </tr>
                                    
                                }
                            </table>
                        }
                        <button onclick="window.print()"> Print To PDF current Record</button>
                    </div>
                    <hr role="presentation" />
                    <div class="mb-3 col-12">
                        <h2 class="mb-2 fs-2 lh-tight">Subject Corrdinator </h2>

                        @if (Model.CoordinatorUsers.Count < 1)
                        {
                            <p>Unfortunately, no Subject Corrdinator registered here .</p>
                        }
                        else
                        {
                            <table class="w-100">
                                @foreach (var coordinatorUsers in Model.CoordinatorUsers)
                                {
                                    <tr>
                                        <td class="w-25"><b>First Name</b></td>
                                        <td>@coordinatorUsers.FirstName</td>
                                    </tr>
                                    <tr>
                                        <td class="w-25"><b>Last Name</b></td>
                                        <td>@coordinatorUsers.LastName</td>
                                    </tr>
                                    <tr>
                                        <td class="w-25"><b>Email Address</b></td>
                                        <td>@coordinatorUsers.EmailAddress</td>
                                    </tr>
                                    <tr>
                                        <td class="w-25"><b>Phone Number</b></td>
                                        <td>@coordinatorUsers.PhoneNumber</td>
                                    </tr>
                                    <tr>
                                        <td class="w-25"><b>Joined On</b></td>
                                        <td>@coordinatorUsers.CreatedOn</td>
                                    </tr>
                                    <tr>
                                        <td class="w-25"><b>Physical Address</b></td>
                                        <td>@coordinatorUsers.PhysicalAddress</td>
                                    </tr>
                                    <tr>
                                        <td class="w-25"><b>Gender</b></td>
                                        <td>@coordinatorUsers.Gender</td>
                                    </tr>
                                    <tr>
                                        <td class="w-25"><b>Last Name</b></td>
                                        <td>@coordinatorUsers</td>
                                    </tr>
                                    
                                    
                                }
                            </table>
                        }
                        <button onclick="window.print()"> Print To PDF current Record</button>
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>