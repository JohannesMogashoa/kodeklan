@model IEnumerable<iTut.Models.HOD.Admission>

@{
    ViewData["Title"] = "Index";
   
}
<style>
.table{
    
}
</style>


<div id="collapseOffCanvas" class="bg-body offcanvas-collapse open w-100">
    <main class="main-expanded vh-100 w-100">
        <div class="container-fluid px-lg-5">
            <div class="d-flex py-5 border-bottom">
                <div class="mr-auto">
                    <h2 class="mb-2 fs-1 lh-tight"> </h2>
                    <p class="lh-tight">Student Management</p>
                </div>
                <ul class="list-unstyled d-flex align-items-center">
                    <li class="d-lg-none mr-sm-5">
                        <button class="btn link-body p-0 offcanvas-button" type="button">
                            <svg class="gi gi-arrow-circle-left fs-4" width="1em" height="1em" viewBox="0 0 24 24" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                <path d="M12 2c5.523 0 10 4.477 10 10s-4.477 10-10 10S2 17.523 2 12 6.477 2 12 2zm-.293 6.293a1 1 0 0 0-1.414 0h0l-3 3-.083.094a1 1 0 0 0 .083 1.32h0l3 3 .094.083a1 1 0 0 0 1.32-.083h0l.083-.094a1 1 0 0 0-.083-1.32h0L10.416 13H16l.117-.007A1 1 0 0 0 16 11h0-5.586l1.293-1.293.083-.094a1 1 0 0 0-.083-1.32z"></path>
                            </svg>
                        </button>
                    </li>
                </ul>
            </div>
            <div class="invisible-scrollbar position-relative wh-main">
                <div class="row mt-3">
                    <div class="col-12">
                        <div class="d-flex align-items-center mb-3">
                            
                            <div class="mr-auto">

                                <img src="~/img/HOD/StudentClass.png" alt="Sample Photo" hight="120" width="100" />
                                <p><a asp-controller="HOD" asp-action="StudentClassesIndex">Student By Classes Management</a></p>
                            </div>
                            <div class="mr-auto">

                                <img src="~/img/HOD/Students.png" alt="Sample Photo" hight="100" width="100" />
                                <p><a asp-controller="HOD" asp-action="StudentsIndex">Students Management</a></p>
                            </div>
                            <div class="mr-auto">

                                <img src="~/img/HOD/group.png" alt="Sample Photo" hight="110" width="100" />
                                <p><a asp-controller="HOD" asp-action="GroupsIndex">Groups Management</a></p>
                            </div>
                            <div class="mr-auto">

                                <img src="~/img/HOD/Session.png" alt="Sample Photo" hight="120" width="100" />
                                <p><a asp-controller="HOD" asp-action="SessionsIndex">Sessions Management</a></p>
                            </div>
                            <div class="mr-auto">

                                <img src="~/img/HOD/Session.png" alt="Sample Photo" hight="120" width="100" />
                                <p><a asp-controller="HOD" asp-action="SectionsIndex">Sections Management</a></p>
                            </div>
                            
                        </div>
                        <hr />
                        <p>
                            <a asp-controller="HOD" asp-action="AdmissionsCreate">Add New Student Admission</a>
                        </p>
                        
                        <hr />
                        
                        <table class="table  ">
                            <thead  bgcolor="cream">
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.AdmissionDate)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.PreviousSchool)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.PreviousSchoolAddrs)
                                    </th>
                                    
                                    <th>
                                        @Html.DisplayNameFor(model => model.Extension)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Session)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.StudentClass)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Group)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Student)
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody align ="center">
                                
                        @foreach (var item in Model) {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.AdmissionDate)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PreviousSchool)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PreviousSchoolAddrs)
                                    </td>
                                    
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Extension)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Session.Id)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.StudentClass.Id)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Group.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Student.Name)
                                    </td>
                                    <td>
                                        <a asp-controller="HOD" asp-action="AdmissionsEdit" asp-route-id="@item.Id">Edit</a> |
                                        <a asp-controller="HOD" asp-action="AdmissionsDetails" asp-route-id="@item.Id">Details</a> |
                                            <a asp-controller="HOD" asp-action="AdmissionsDelete" asp-route-id="@item.Id">Delete</a>
                                    </td>
                                </tr>
                        }
                            </tbody>
                        </table>
                        
                    </div>
                    <hr/>
                    <div class="mr-auto">

                        <img src="~/img/HOD/Back.png" alt="Sample Photo" hight="120px" width="100" />
                        <p><a asp-controller="HOD" asp-action="Index">Back To DashBoard</a></p>
                    </div>
                    <hr />
                </div>
            </div>
        </div>
    </main>
</div>





