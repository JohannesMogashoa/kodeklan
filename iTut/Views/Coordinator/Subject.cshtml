 @model IEnumerable<iTut.Models.Coordinator.Subject>

@{
    ViewData["Title"] = "Subject";
}
<head>
    <div id="collapseOffCanvas" class="bg-body offcanvas-collapse open w-100">
        <main class="main-expanded vh-100 w-100">
            <div class="container-fluid px-lg-5">
                <div class="d-flex py-5 border-bottom">
                    <br />
                    <br />
                    <br />
                    <br />
                    <ul class="list-unstyled d-flex align-items-center">
                        <h2 class="text-center">Manage Subjects</h2>
                        <li class="d-lg-none mr-sm-5">                         
                        </li>                     
                    </ul>
                </div>
               <br/>
                <div class="row">
                    <div class="col-sm-4">
                        <div class="card bg-success" style=" width: 18rem;">
                            <div class="card-body">
                                <h5>Number of subjects : @ViewBag.Subjects </h5>
                                <h5></h5>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="text-right">
                            <a href="/Coordinator/CreateASubject" class="btn  btn-primary">Add</a>
                            <a class="btn  btn-primary" href="javascript:window.print()" href="javascript:window.print()">
                                <span class="tf-icons bx bx-printer me-2">  </span>print
                            </a>
                        </div>
                    </div>
                    
                </div>
               
</head>

<br/>
<section>
    <br />
    <br />
</section>
<section>
    <br />
    <br />
    @if(Model.Count() > 0){
        <div class="table-responsive">
            <table class="table table-bordered table-striped" style="width:100%">
                <thead>
                    <tr>    
                        <th scope="auto">
                            @Html.DisplayNameFor(model => model.SubjectName)
                        </th>
                        <th scope="auto">
                            @Html.DisplayNameFor(model => model.SubjectDescr)
                        </th>
                        <th scope="auto"></th>
                        <th scope="auto">
                            @Html.DisplayNameFor(model => model.Status)
                        </th>
                        <th scope="auto">
                            @Html.DisplayNameFor(model => model.Grade)
                        </th>
                       
                        <th scope="auto">
                            @Html.DisplayNameFor(model => model.Updated_at)
                        </th>
                       
                        <th scope="auto"></th>
                     
                    </tr>
                </thead>
                <br />
                <tbody>
                    @foreach (var subject in Model)
                    {
                        <tr>
                            <td width="15%">@Html.DisplayFor(modelSubject => subject.SubjectName) </td>
                            <td width="15%">@Html.DisplayFor(model => subject.SubjectDescr) </td>
                            <th scope="5"></th>
                            <td width="15%">@Html.DisplayFor(model => subject.Status)</td>
                            <td width="15%" class="text-center">@Html.DisplayFor(model => subject.Grade) </td>
                             <td width="15%">@Html.DisplayFor(model => subject.Updated_at)</td>
                            <td width="30%">
                                <a asp-action="Details" asp-route-id="@subject.Id" class="btn btn-outline-secondary btn-sm mx-1">
                                    <svg class="gi gi-plus-circle-outline fs-3" width="1em" height="1em" viewBox="0 0 24 24" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                        <path d="M12 2c5.523 0 10 4.477 10 10s-4.477 10-10 10S2 17.523 2 12 6.477 2 12 2zm0 2a8 8 0 1 0 0 16 8 8 0 1 0 0-16zm0 4a1 1 0 0 1 1 1v2h2a1 1 0 1 1 0 2h-2v2a1 1 0 1 1-2 0v-2H9a1 1 0 1 1 0-2h2V9a1 1 0 0 1 1-1z" />
                                    </svg>
                                </a> 
                                <a asp-action="Edit" asp-route-id="@subject.Id" class="btn btn-outline-primary btn-sm mx-1">
                                    <svg width="1em" height="1em" viewBox="0 0 24 24" fill="currentColor" xmlns="http://www.w3.org/2000/svg" class="gi gi-edit-2 fs-2">
                                        <path d="M16.57 2.47l.107.1 2.754 2.754a1.95 1.95 0 0 1 .099 2.647l-.1.107-8.72 8.72c-.255.255-.576.434-.925.517l-.177.034L5.112 18c-.6.086-1.12-.388-1.11-.974v-.127l.642-4.497c.05-.357.2-.692.43-.968l.12-.133 8.72-8.72a1.95 1.95 0 0 1 2.647-.099zM15.3 3.947l-2.065 2.065 2.754 2.754L18.053 6.7 15.3 3.947zM19 20a1 1 0 0 1 .117 1.993L19 22H5a1 1 0 0 1-.117-1.993L5 20h14z"></path>
                                    </svg>
                                </a>
                                
                            </td>
                          
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }  
</section>
</main>
</div>
