@model iTut.Models.ViewModels.Coordinator.CoordinatorIndexViewModel
@{
    ViewData["Title"] = "Home";
}

<div id="collapseOffCanvas" class="bg-body offcanvas-collapse open w-100">
    <main class="main-expanded vh-100 w-100">
        <div class="container-fluid px-lg-5">
            <div class="d-flex py-5 border-bottom">
                <div class="mr-auto">
                    <p class="lh-tight fs-3">Work Board</p>
                </div>
                <ul class="list-unstyled d-flex align-items-center">
                    <li class="d-lg-none mr-sm-5">
                        <button class="btn link-body p-0 offcanvas-button" type="button">
                            <svg class="gi gi-arrow-circle-left fs-4" width="1em" height="1em" viewBox="0 0 24 24" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                <path d="M12 2c5.523 0 10 4.477 10 10s-4.477 10-10 10S2 17.523 2 12 6.477 2 12 2zm-.293 6.293a1 1 0 0 0-1.414 0h0l-3 3-.083.094a1 1 0 0 0 .083 1.32h0l3 3 .094.083a1 1 0 0 0 1.32-.083h0l.083-.094a1 1 0 0 0-.083-1.32h0L10.416 13H16l.117-.007A1 1 0 0 0 16 11h0-5.586l1.293-1.293.083-.094a1 1 0 0 0-.083-1.32z"></path>
                            </svg>
                        </button>
                    </li>
                </ul>
            </div>
            <div>
                <div>
                    <div>
                        <br />
                        <br />
                        <br />
                    </div>
                </div>
            </div>
            <div class="invisible-scrollbar position-relative wh-main">
                <div class="card-group">
                    <div class="overflow-scroll">
                        <div class="row m-1 justify-content-around">
                            <div class="card h-100 col-md-4" style="width:250px">
                                <img class="card-img-top w-100" src="~/img/undraw_education_f8ru.svg" alt="Card image cap">
                                <div class="card-body">
                                    <h5 class="card-title py-2"></h5>

                                    <p class="card-text pt-0 pb-2">Click to view subject records...</p>
                                    <a asp-controller="Coordinator" asp-action="Subject" class="btn btn-sm btn-primary">Manage Subjects</a>
                                </div>
                            </div>
                            <div class="card h-100 col-md-4" style="width:250px">
                                <img class="card-img-top w-100" src="~/img/undraw_team_spirit_re_yl1v.svg" alt="Card image cap">
                                <div class="card-body">
                                    <h5 class="card-title py-2"></h5>
                                    <p class="card-text py-3">Click to view all feedbacks..</p>
                                    <a asp-controller="Coordinator" asp-action="Feedback" class="btn btn-sm btn-primary"> Manage Feedbacks</a>
                                </div>
                            </div>
                            <div class="card h-100 col-md-4" style="width:250px">
                                <img class="card-img-top w-100" src="~/img/undraw_posts_re_ormv.svg" alt="Card image cap">
                                <div class="card-body">
                                    <h5 class="card-title py-2"></h5>
                                    <p class="card-text py-3">Click to handle complaints...</p>
                                    <a asp-controller="Coordinator" asp-action="Complaints" class="btn btn-sm btn-primary"> Manage Complaints</a>
                                </div>
                            </div>
                            <div class="card h-100 col-md-4" style="width:250px">
                                <img class="card-img-top w-100" src="~/img/undraw_teacher_re_sico.svg" alt="Card image cap">
                                <div class="card-body">
                                    <h5 class="card-title py-2"></h5>
                                    <p class="card-text py-3">Click to assign subjects...</p>
                                    <a asp-controller="Coordinator" asp-action="AssignSubjects" class="btn btn-sm btn-primary"> Manage Educators</a>
                                </div>
                            </div>
                            <div class="card h-100 col-md-4" style="width:250px">
                                <img class="card-img-top w-100" src="~/img/undraw_data_report_re_p4so.svg" alt="Card image cap">
                                <div class="card-body">
                                    <h5 class="card-title py-2"></h5>
                                    <p class="card-text py-3">Click to view student report...</p>
                                    <a asp-controller="Coordinator" asp-action="Reports" class="btn btn-sm btn-primary"> Manage Reports</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
    </main>
</div>