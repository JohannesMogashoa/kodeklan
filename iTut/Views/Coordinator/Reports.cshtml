@model List<iTut.Models.Coordinator.Subject>

<head>
    <div id="collapseOffCanvas" class="bg-body offcanvas-collapse open w-100">
        <main class="main-expanded vh-100 w-100">
            <div class="container-fluid px-lg-5">
                <div class="d-flex flex-column py-5 border-bottom">
                    <ul class="list-unstyled d-flex align-items-center">
                        <h2 class="text-center">Summary of Subjects Created</h2>
                    </ul>
                    <div>
                        <p>Generated by the Coordinator</p>
                        <p>Coordinator@itut.com</p>
                        <p>25 October 2022</p>

                        <p></p>
                    </div>
                </div>

                <br />
                <div class="d-flex align-items-center justify-content-between">
                    <div class="" style=" width: 18rem;">
                        <h5>Number of subjects : @Model.Count </h5>
                    </div>
                    <a class="btn btn-primary" href="javascript:window.print()" href="javascript:window.print()">
                        <span class="tf-icons bx bx-printer me-2">  </span>print
                    </a>
                </div>

</head>

<br />
<section>
    <br />
    <br />
</section>
<section>
    <br />
    <br />
    @if (Model.Count > 0)
    {
        <div class="table-responsive">
            <table class="table table-bordered table-striped" style="width:100%">
                <thead>
                    <tr>
                        <th>
                            Subject Name
                        </th>
                        <th>
                            Description
                        </th>
                        <th>
                            Status
                        </th>
                        <th>
                            Grade
                        </th>
                        <th>
                            Updated At
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var subject in Model)
                    {
                        <tr>
                            <td class="text-center">@Html.DisplayFor(modelSubject => subject.SubjectName) </td>
                            <td class="text-center">@Html.DisplayFor(model => subject.SubjectDescr) </td>
                            <td class="text-center">@Html.DisplayFor(model => subject.Status)</td>
                            <td class="text-center">@Html.DisplayFor(model => subject.Grade) </td>
                            <td class="text-center">@Html.DisplayFor(model => subject.Updated_at)</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</section>
</main>
</div>


    </hr>
<hr />
</section>