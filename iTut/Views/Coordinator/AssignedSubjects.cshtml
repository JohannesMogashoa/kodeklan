@model IEnumerable<iTut.Models.Coordinator.SubjectEducator>


<head>
    <div id="collapseOffCanvas" class="bg-body offcanvas-collapse open w-100">
        <main class="main-expanded vh-100 w-100">
            <div class="container-fluid px-lg-5">
                <div class="d-flex py-5 border-bottom">
                    @*  <span class="d-inline-flex flex-shrink-0 align-items-center justify-content-center mr-3 text-white text-uppercase bg-primary rounded-circle  wh-2-5rem">@Model.Coordinator.FirstName.ToCharArray()[0]</span>
                    *@

                    <br />
                    <br />

                    <br />
                    <br />
                    <h2 class=" align-content-center">Manage Subjects</h2>
                    <ul class="list-unstyled d-flex align-items-center">

                        <li class="d-lg-none mr-sm-5">
                            <button class="btn link-body p-0 offcanvas-button" type="button">
                                <svg class="gi gi-arrow-circle-left fs-4" width="1em" height="1em" viewBox="0 0 24 24" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M12 2c5.523 0 10 4.477 10 10s-4.477 10-10 10S2 17.523 2 12 6.477 2 12 2zm-.293 6.293a1 1 0 0 0-1.414 0h0l-3 3-.083.094a1 1 0 0 0 .083 1.32h0l3 3 .094.083a1 1 0 0 0 1.32-.083h0l.083-.094a1 1 0 0 0-.083-1.32h0L10.416 13H16l.117-.007A1 1 0 0 0 16 11h0-5.586l1.293-1.293.083-.094a1 1 0 0 0-.083-1.32z"></path>
                                </svg>
                            </button>
                        </li>
                    </ul>
                </div>
</head>
<section>

    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th scope="auto">
                    @Html.DisplayNameFor(model => model.SubjectId)
                </th>
                <th scope="auto">
                    @Html.DisplayNameFor(model => model.EducatorId)
                </th>
                <th scope="auto">
                    @Html.DisplayNameFor(model => model.GradeId)
                </th>
                <th scope="auto"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td width="15%">
                        @Html.DisplayFor(modelItem => item.Subject.SubjectName)
                    </td>
                    <td width="15%">
                        @Html.DisplayFor(modelItem => item.Educator.EmailAddress)
                    </td>
                    <td width="15%">
                        @Html.DisplayFor(modelItem => item.Grade)
                    </td>
                    <td width="15%">
                        <a asp-action="Edit" asp-route-id="@item.SubjectEducatorId">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.SubjectEducatorId">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.SubjectEducatorId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</section>