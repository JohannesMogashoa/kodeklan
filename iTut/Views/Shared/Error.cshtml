@{
    ViewData["Title"] = "Oops! Something Went Wrong";
    Layout = "_Authlayout";
}

<div class="w-100 min-vh-100 d-flex flex-column justify-content-center">
    <div class="py-5">
        <div class="container">
            <div class="mx-auto bg-body p-5 rounded" style="max-width: 600px">
                <h1 class="mb-5 fs-4 mt-4">Oops! Something Went Wrong.</h1>
                <div class="d-flex mb-3">
                    <div>
                        <div class="flex-grow-1">
                            <div class="d-flex align-items-center justify-content-between mb-2">
                                <p class="fs-1">We cant seem to process your request. If this problem continues please contact support.</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="w-100 d-flex">
                    <a asp-controller="Home" asp-action="Index" class="btn btn-lg btn-primary">Go Home</a>
                </div>
            </div>
        </div>
    </div>
</div>